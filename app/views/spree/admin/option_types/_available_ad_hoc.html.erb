<h4><%= Spree.t("add_option_types") %></h4>
<table class="table table-bordered index">
  <thead>
    <tr>
      <th><%= Spree.t("name") %></th>
      <th><%= Spree.t("presentation") %></th>
      <th class='actions'></th>
    </tr>
  </thead>
  <tbody>
    <% @available_option_types.each do |ot| %>
      <tr>
        <td><%=ot.name %></td>
        <td><%=ot.presentation %></td>
        <td class="actions"><%= link_to_with_icon 'icon-plus', Spree.t("select"),
          url_for(:controller => "admin/option_types",
                  :id => ot,
                  :product_id => @product.id,
                  :action => "select_ad_hoc",
                  :option_type_id =>  ot),
                  :class => 'iconlink' %>
        </td>
      </tr>
    <% end %>
    <% if @available_option_types.empty? %>
      <tr>
        <td colspan="3"><%= Spree.t('none_available') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
